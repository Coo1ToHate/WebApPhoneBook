<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/normalize.css" rel="stylesheet"/>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Style.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <header class="header offset">
        <div class="container"> 
            <div class="row align-items-center header__container">
                <nav>
                    @await Component.InvokeAsync("MenuTopView")
                </nav>
            </div>
        </div>
    </header>

    <main class="main offset">
        <section class="book section-offset">
            <div class="container book__container">
                <h2 class="book__title">@ViewBag.Title</h2>
                <div class="book__content">
                    @RenderBody()
                </div>
            </div>
        </section>
    </main>

<footer class="footer">
    <div class="container">
        <span class="d-flex justify-content-center">&copy; @DateTime.Now.Year</span>
    </div>
</footer>
